{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",
    "allowImportingTsExtensions": true,

    /* Language & Runtime */
    "target": "ES2020",
    "module": "NodeNext",

    /* Module Resolution */
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,

    /* Output */
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,

    /* Type Safety */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,

    /* Interop */
    "esModuleInterop": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
